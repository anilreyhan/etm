<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center">Kullanıcı Ayarlarını Güncelle</h3>
            <form action="/users/editUserSettings/{{userRequested._id}}?_method=PUT" method="post">
                <div class="form-group">
                    <label for="name">İsim - Soyisim</label>
                    <input type="text" class="form-control" name="name" value="{{userRequested.FName}} {{userRequested.LName}}"  readonly>
                </div>
                <div class="form-group">
                    <label for="username">Kullanıcı Adı</label>
                    <input type="text" name="username" class="form-control" value="{{userRequested.username}}"   readonly >
                </div>
                <div class="form-group">
                    <label for="username">Toplam İzin Gün Sayısı</label>
                    <input type="text" name="totalHolidays" class="form-control" value="{{userRequested.totalHolidays}}"   readonly >
                </div>
                <div class="form-group">
                    <label for="username">Kullanılmış İzin Gün Sayısı</label>
                    <input type="text" name="holidaysTaken" class="form-control" value="{{userRequested.holidaysTaken}}"   readonly >
                </div>
                <div class="form-group">
                    <label for="username">Kalan İzin Gün Sayısı</label>
                    <input type="text" name="remainingHolidays" class="form-control" value="{{userRequested.remainingHolidays}}"   readonly >
                </div>
                
            
                <button type="submit" class="btn btn-secondary">Gönder</button>
            </form>
        </div>
    </div>
</div>
